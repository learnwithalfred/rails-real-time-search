<div>
  <div class="header-div">
    <h1>Articles</h1>
    <div>
      <%= link_to "New article", new_article_path, class:"submit-btn" %>
    </div>
  </div>
  <%= form_with(url: articles_path, method: "GET", data:{controller: "form-submission", turbo_frame: "articles", turbo_action: "advance"}) do |form| %>
  <div class="form">
    <%= form.label :query, "Search articles by name:", class:"label" %>
    <%= form.text_field :query, data: { action: "input->form-submission#search" }, class:"input" %>
  </div>
  <% end %>
  <%= render "articles", articles: @articles %>
</div>
