<div>
  <div class="header-div">
    <h1>Articles</h1>
    <div>
      <%= link_to "New article", new_article_path, class:"submit-btn" %>
    </div>
  </div>
  <%= form_with(url: articles_path, method: "GET") do |form| %>
  <div class="form">
    <%= form.label :query, "Search articles by name:", class:"label" %>
    <%= form.text_field :query, class:"input", placeholder:"search articles..." %>
    <%= form.submit "Search", class:"submit-btn" %>
  </div>
  <% end %>
  <div id="articles">
    <% if @articles.empty? %>
    <p>No articles found</p>
    <% else %>

    <% @articles.each do |article| %>
    <p class="item">
      <%= article.name %> <%= link_to "View", article_path(article) %>
    </p>
    <%end %>
    <% end %>
  </div>
